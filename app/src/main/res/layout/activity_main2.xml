<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00162C"
    tools:context=".View.MainActivity2">


<androidx.appcompat.widget.AppCompatImageButton
    android:id="@+id/btBackDetails"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_baseline_arrow_back_ios_24"
    app:layout_constraintTop_toTopOf="parent"
    android:background="#000000FF"
    android:translationZ="90dp"
    app:layout_constraintStart_toStartOf="parent"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivDetails"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_b"
        />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCover"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:padding="1dp"
        android:cropToPadding="true"
        android:background="@drawable/img_border"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_b"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvDetails"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDetails"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_margin="15dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivDetails"
        android:text="Amazing Spider-Man (2014) #1"
        android:textSize="30sp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvDetails"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp"
        android:text=""
        />

<androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/tvDate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/tvDescription"
    app:layout_constraintStart_toStartOf="parent"
    android:textColor="@color/white"
    android:layout_margin="15dp"
    android:text="Published: April,30,2014"
    />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvDate"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:text="Price: $5,99"
        android:layout_margin="15dp"
        />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvPrice"
        android:layout_margin="15dp"
        android:text="Pages: 38"
        />



</androidx.constraintlayout.widget.ConstraintLayout>